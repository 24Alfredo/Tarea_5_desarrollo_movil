<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiAppCrud.Views.OrdenEditPage">
    <StackLayout Padding="10">
        <Label Text="Fecha de la Orden"/>
        <DatePicker x:Name="FechaPicker" Date="{Binding Fecha}" />
        <!-- Usar DatePicker -->

        <Label Text="Selecciona un Producto"/>
        <Picker x:Name="ProductoPicker" Title="Selecciona un producto"/>

        <Button Text="Guardar" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>
